# Monzo API configuration
CLIENT_ID=
CLIENT_SECRET=

# Monzo OAuth scopes (space-separated). If unset, the scopes configured in the Monzo developer portal client will be used.
MONZO_SCOPES=
REDIRECT_URI=

MONZO_AUTH_ENDPOINT=https://auth.monzo.com
MONZO_API_ENDPOINT=https://api.monzo.com
MONZO_TOKEN_PATH=/oauth2/token


TOKEN_DIRECTORY=./data
TOKEN_FILE=monzo_refresh_token.txt

# Actual Budget API configuration
ACTUAL_SERVER_URL=
ACTUAL_PASSWORD=
ACTUAL_BUDGET_ID=
ACTUAL_BUDGET_ENCRYPTION_PASSWORD=

# Enable shim for Node>=20 guard in @actual-app/api (daemon only)
ENABLE_NODE_VERSION_SHIM=false

# Logging level (info, debug, error)
LOG_LEVEL=info

# HTTP port for web UI server (daemon mode only; enables UI)
HTTP_PORT=3000

# Cron schedule for sync (once an hour on the hour)
SYNC_CRON=0 * * * *
SYNC_CRON_TIMEZONE=UTC

# Path to mapping file (relative to project root)
MAPPING_FILE=./data/mapping.json