{
  "name": "actual-monzo-pots",
  "version": "1.2.0",
  "description": "Sync Monzo Pot balances to Actual Budget accounts",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js --mode sync",
    "sync": "node src/index.js --mode sync",
    "daemon": "node src/index.js --mode daemon",
    "test": "jest --passWithNoTests",
    "test:coverage": "JEST_COVERAGE=true npm test",
    "test:watch": "jest --watch",
    "prepare": "husky install || true",
    "lint": "eslint . && npm run lint:ejs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:ejs": "npx ejs-lint \"src/views/**/*.ejs\"",
    "prerelease": "npm run lint && npm run format:check && npm test",
    "release": "semantic-release"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@actual-app/api": "^26.1.0",
    "axios": "^1.13.3",
    "dotenv": "^17.2.3",
    "ejs": "^4.0.1",
    "ejs-lint": "^2.0.1",
    "express": "^5.2.1",
    "js-yaml": "^4.1.1",
    "node-cron": "^4.2.1",
    "pino": "^10.3.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "eslint": "^9.39.2",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.2",
    "supertest": "^7.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.ejs": [
      "npx ejs-lint"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
